#!/bin/bash

RUNNO=$1
BINARYDIR=/home/alconley/Projects/SPS_CEBRA_tests/DAQ/run_$RUNNO/UNFILTERED
ARCHIVE=/home/alconley/Projects/WorkingDir/raw_binary/run_$RUNNO.tar.gz

echo "Running archivist for binary data in $BINARYDIR to archive $ARCHIVE..."

cd $BINARYDIR

tar -cvzf $ARCHIVE ./*.BIN

cd -

echo "Complete."
